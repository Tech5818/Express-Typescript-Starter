{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    /**
     * setting path alias
    */
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["./*"],
      "@controller/*": ["./controller/*"],
      "@utils/*": ["./utils/*"],
      "@service/*": ["./service/*"]
    }
  }
}
